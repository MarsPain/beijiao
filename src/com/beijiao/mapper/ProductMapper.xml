<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beijiao.dao.ProductMapper">
                             
<!-- 查询产品-->
<select id="selectProduct" parameterType="int" resultType="com.beijiao.model.Product">
select * from product  where productId=#{productId}
</select>
<!-- 查询所有产品 -->
<resultMap type="com.beijiao.model.Product" id="productList">
    <id property="productId" column="productId"/>
    <result property="companyId" column="companyId"/>
    <result property="productName" column="productName"/>
    <result property="productIntro" column="productIntro"/>
</resultMap>
<select id="selectListProduct"  resultMap="productList">
select * from product 
</select>
<!-- 添加产品 -->
<insert id="addProduct" parameterType="com.beijiao.model.Product">
insert into product(companyId,productName,productIntro) values(
                       #{companyId},#{productName},#{productIntro}) 
</insert>
<!-- 修改产品 -->
<update id="changeProduct" parameterType="com.beijiao.model.Product">
 update product set 
</update>
<!-- 删除产品 -->
<delete id="deleteProduct" parameterType="int">
delete * from product where productId=#{productId}
</delete>


</mapper>